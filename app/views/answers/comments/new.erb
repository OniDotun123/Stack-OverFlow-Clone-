<form class="" action="/answers/<%= @answer.id %>/comments" method="post">
  <input type="hidden" name="answer_id" value="<%= @answer.id %>">
  <input type="hidden" name="question_id" value="<%= @question.id %>">
  <input type="hidden" name="attrs[user_id]" value="<%= current_user.id%>">
  <input type="text" name="attrs[content]" placeholder="Make a comment here">
  <input type="submit" value="Comment">
</form>
